set -x
environmet=${1:-production}
ssldir=/etc/puppetlabs/puppet/ssl
host=$(hostname)
curl -i --cert "${ssldir?}/certs/${host?}.pem" --key "${ssldir?}/private_keys/${host?}.pem" --cacert "${ssldir?}/ca/ca_crt.pem" -X DELETE "https://${host?}:8140/puppet-admin-api/v1/environment-cache?environment=$environment"
