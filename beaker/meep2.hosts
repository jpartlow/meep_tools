default_platform: &default_platform el-7-x86_64
default_image: &default_image centos_7_x86_64
default_user: &default_user centos

HOSTS:
  primary.meep2.net:
    roles:
      - master
      - database
      - dashboard
      - agent
    platform: *default_platform
    hypervisor: openstack
    image: *default_image
    user: *default_user
    flavor: g1.large # 4GB 4VCPU 32GB
  compile1.meep2.net:
    roles:
#      - compile_master
      - agent
      - frictionless
    platform: *default_platform
    hypervisor: openstack
    image: *default_image
    user: *default_user
    flavor: g1.medium # 2GB 2VCPU 16GB
  compile2.meep2.net:
    roles:
#      - compile_master
      - agent
      - frictionless
    platform: *default_platform
    hypervisor: openstack
    image: *default_image
    user: *default_user
    flavor: g1.medium # 2GB 2VCPU 16GB
  lb.meep2.net:
    roles:
      - loadbalancer
      - agent
      - frictionless
    platform: *default_platform
    hypervisor: openstack
    image: *default_image
    user: *default_user
    flavor: g1.small # 1GB 1VCPU 8GB
  hub1.pdx.meep2.net:
    roles:
#      - hub
      - agent
      - frictionless
    platform: *default_platform
    hypervisor: openstack
    image: *default_image
    user: *default_user
    flavor: g1.small
