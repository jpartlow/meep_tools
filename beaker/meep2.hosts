#      - spoke
      - agent
      - frictionless
    platform: *default_platform
    hypervisor: openstack
    image: *default_image
    user: *default_user
    flavor: g1.small
  broker2.bfs.meep2.net:
    roles:
#      - spoke
      - agent
      - frictionless
    platform: *default_platform
    hypervisor: openstack
    image: *default_image
    user: *default_user
    flavor: g1.small
  agent1.pdx.meep2.net:
    roles:
      - agent
      - frictionless
    platform: *default_platform
    hypervisor: openstack
    image: *default_image
    user: *default_user
    flavor: g1.small
