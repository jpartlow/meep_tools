default_flavor: &default_flavor g1.small

HOSTS:
  centos.rspec:
    image: centos_7_x86_64
    user: centos
    flavor: *default_flavor
  ubuntu.rspec:
    image: ubuntu_16.04_x86_64
    user: ubuntu
    flavor: *default_flavor

CONFIG:
  security_group: ['default','sg0']
  floating_ip_pool: ext-net-pdx1-opdx1
  ssh:
    keys:
      - ~/.ssh/slice-jpartlow.pem
